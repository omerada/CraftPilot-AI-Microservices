# MongoDB Bağlantı Ayarları
MONGO_ROOT_USERNAME=craftpilot
MONGO_ROOT_PASSWORD=secure_password
MONGO_INITDB_DATABASE=craftpilot
MONGO_PORT=27017
MONGO_CACHE_SIZE_GB=0.5

# Mongo Express Ayarları
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin_pass
MONGO_EXPRESS_PORT=8081

# Uygulama Bağlantı URI'ları
MONGODB_URI=mongodb://craftpilot:secure_password@mongodb:27017/craftpilot?authSource=admin&retryWrites=true&w=majority
MONGODB_URI_EXTERNAL=mongodb://craftpilot:secure_password@localhost:27017/craftpilot?authSource=admin&retryWrites=true&w=majority
