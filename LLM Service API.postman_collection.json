          "}",
          "if (!pm.variables.get('userRole')) {",
          "    pm.variables.set('userRole', 'USER');",
          "}",
          "if (!pm.variables.get('userEmail')) {",
          "    pm.variables.set('userEmail', 'test@craftpilot.io');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test(\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test(\"Response has content-type header\", function () {",
          "    pm.response.to.have.header(\"Content-Type\", \"application/json\");",
          "});",
          "",
          "pm.test(\"Response has request ID header\", function () {",
          "    pm.response.to.have.header(\"X-Request-ID\");",
          "});",
          "",
          "if (pm.response.json()) {",
          "    console.log('Response:', JSON.stringify(pm.response.json(), null, 2));",
          "}"
        ]
      }
